<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="simpleapps.tictactoe.Afterstart"
    tools:showIn="@layout/activity_afterstart">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="15dp"
        android:layout_weight=".6"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="2.1">

        <TextView
            android:id="@+id/playerone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="casual"
            android:gravity="center"
            android:text="player 1"
            android:textColor="@color/secondaryDarkColor"
            android:textSize="22sp"
            android:textStyle="bold" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/primaryDarkColor" />

        <TextView
            android:id="@+id/playertwo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="casual"
            android:gravity="center"
            android:text="player 2"
            android:textAlignment="center"
            android:textColor="@color/secondaryDarkColor"
            android:textSize="22sp"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:weightSum="2.1">

        <TextView
            android:id="@+id/p1score"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="casual"
            android:gravity="center"
            android:text="0"
            android:textSize="55sp" />


        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/primaryDarkColor" />

        <TextView
            android:id="@+id/p2score"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="casual"
            android:gravity="center"
            android:text="0"
            android:textSize="55sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="15dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/u00"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hapticFeedbackEnabled="false"
            android:onClick="u00" />

        <ImageView
            android:id="@+id/u01"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hapticFeedbackEnabled="false"
            android:onClick="u01" />

        <ImageView
            android:id="@+id/u02"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hapticFeedbackEnabled="false"
            android:onClick="u02" />

        <View
            android:layout_width="@dimen/line_thickness"
            android:layout_height="match_parent"
            android:background="@drawable/linev"
            android:rotation="2" />

        <View
            android:layout_width="@dimen/line_thickness"
            android:layout_height="match_parent"
            android:background="@drawable/linev"
            android:rotation="182" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/m00"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hapticFeedbackEnabled="false"
            android:onClick="m00" />

        <ImageView
            android:id="@+id/m01"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hapticFeedbackEnabled="false"
            android:onClick="m01" />

        <ImageView
            android:id="@+id/m02"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hapticFeedbackEnabled="false"
            android:onClick="m02" />

        <View
            android:layout_width="@dimen/line_thickness"
            android:layout_height="match_parent"
            android:background="@drawable/linev"
            android:rotation="182" />

        <View
            android:layout_width="@dimen/line_thickness"
            android:layout_height="match_parent"
            android:background="@drawable/linev"
            android:rotation="0"
            android:rotationX="0" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/b00"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hapticFeedbackEnabled="false"
            android:onClick="l00" />

        <ImageView
            android:id="@+id/b01"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hapticFeedbackEnabled="false"
            android:onClick="l01" />

        <ImageView
            android:id="@+id/b02"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hapticFeedbackEnabled="false"
            android:onClick="l02" />

        <View
            android:layout_width="@dimen/line_thickness"
            android:layout_height="match_parent"
            android:background="@drawable/linev"
            android:rotation="4" />

        <View
            android:layout_width="@dimen/line_thickness"
            android:layout_height="match_parent"
            android:background="@drawable/linev"
            android:rotation="183" />


    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_thickness"
        android:background="@drawable/lineh"
        android:rotation="180"
        android:scaleY="1.5" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_thickness"
        android:background="@drawable/lineh"
        android:scaleY="1.25" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".8"
        android:gravity="center"
        android:weightSum="2">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:fontFamily="casual"
            android:gravity="center"
            android:text="Total Matches"
            android:textColor="@color/secondaryDarkColor"
            app:autoSizeTextType="uniform" />


        <TextView
            android:id="@+id/gamenumber"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:fontFamily="casual"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/secondaryDarkColor"
            android:textSize="25sp"
            app:autoSizeTextType="uniform" />


    </LinearLayout>


</LinearLayout>
